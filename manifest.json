{
  "manifest_version": 3,
  "name": "Pinterest Video Downloader",
  "version": "1.0.0",
  "description": "Download high-quality videos from Pinterest with a native-feeling button.",
  "permissions": [
    "downloads",
    "storage",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.pinterest.com/*",
    "*://*.pinimg.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pinterest.com/*"
      ],
      "js": [
        "content/index.js"
      ],
      "css": [
        "assets/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.png",
        "content/bridge.js"
      ],
      "matches": [
        "*://*.pinterest.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}